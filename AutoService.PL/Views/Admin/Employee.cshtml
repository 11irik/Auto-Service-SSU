@using System.Collections
@using IAutoService.DAL.Entities
@{
    Layout = "_CustomLayout";
}

@{
    ViewData["Title"] = "Сотрудники";
}
<h1>@ViewData["Title"]</h1>




    <div class="btn-group padding" role="group" aria-label="Basic example">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapse5" aria-expanded="false" aria-controls="collapseExample">
            Добавить сотрудника
        </button>
    
    </div>
    
    <div class="collapse padding" id="collapse5">
    
        <form asp-action="AddEmployee" class="padding" method="post">
            Имя: <input type="text" id="empName" name="empName"/>
            Фамилия: <input type="text" id="empLastName" name="empLastName"/>
            Зарплата: <input type="text" id="empSalary" name="empSalary"/>
            <button type="submit">Добавить</button>
        </form>
    
    </div>



    <div class="overflow-auto">
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col">Имя</th>
                    <th scope="col">Фамилия</th>
                    <th scope="col">Зарплата</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (Employee x in (IEnumerable) ViewData["Employees"])
                {
                    <tr>
                        <td>@x.Name</td>
                        <td>@x.LastName</td>
                        <td>@x.Salary</td>
                        <td>
                        <form asp-action="DeleteEmployee" method="post">
                            <input type="hidden" id="empId" name="empId" value="@x.Id"/>
                            <button class="btn btn-danger" type="submit">Удалить</button>
                        </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        </div>
    </div>

<style>
.padding {
        padding: 10px 10px 10px 10px;
    }
</style>