@using System.Collections
@using IAutoService.DAL.Entities
@{
    Layout = "_Layout";
}

@{
    ViewData["Title"] = "Контракты";
}
<h1>@ViewData["Title"]</h1>


<form asp-controller="Contract" asp-action="Index" method="get">
    <p>
        Телефон клиента: <input type="text" name="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>


<div class="overflow-auto">
    <div class="table-container">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">Номер контракта</th>
                <th scope="col">Номер автомобиля</th>
                <th scope="col">Телефон клиента</th>
                <th scope="col">Дата заключения</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (ContractModel x in (IEnumerable<ContractModel>) ViewData["Contracts"])
            {
                <tr>
                    <td>@x._id</td>
                    <td>@x._carNumber</td>
                    <td>@x._clientPhone</td>
                    <td>@x._startDate</td>
                    <td>
                        <a type="button" asp-controller="Contract" asp-action="Details" asp-route-id="@x._id">Детали</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

    </div>
    <style>
    .table-container {
            height: 600px;
    }
    </style>
</div>